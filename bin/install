function install_opam() {
  local install_type=$1
  local version=$2
  local install_path=$3

  local platform

  if [[ "$OSTYPE" == "linux"* ]]; then
    platform="x86_64-linux"
  elif [[ "$OSTYPE" == "darwin"* ]]; then
    platform="x86_64-darwin"
  elif [[ "$OSTYPE" == "openbsd"* ]]; then
    platform="x86_64-openbsd"
  fi

  local download_url="https://github.com/ocaml/opam/releases/download/${version}/opam-${version}-${platform}"

  (
    echo "âˆ— Downloading and installing opam..."
    mkdir -p "$install_path/bin"
    curl --silent --location --output "$install_path/bin/opam" -C - "$download_url"
    chmod +x "$install_path/bin/opam"

    echo
    echo "=================================================="
    echo "Opam $version has been installed!"
    echo "--------------------------------------------------"
    echo "Activate globally with:"
    echo
    echo "$ asdf global opam $version"
    echo "--------------------------------------------------"
    echo "Activate locally in the current folder with:"
    echo
    echo "$ asdf local opam $version"
    echo "=================================================="
    echo
  ) || (
    echo
    echo "=================================================="
    echo "An error occurred!"
    echo "(Temporary files and directory have been cleaned.)"
    echo "=================================================="
    echo
    rm -rf $install_path
    exit 1
  )

  rm -rf "$tmp_download_dir"
}

install_opam "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
